<!DOCTYPE html>
@using EduSim.Core.Models
@using EduSim.Web.Models
@using System.Web

@{
	var CurrentUser = EduSim.Web.Models.ApplicationUser.Current;
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
	<script type="text/javascript" src="~/Scripts/jquery-3.1.1.min.js"></script>
	<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
	<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
 	@Styles.Render("~/Content/bootstrap.css")
	@Styles.Render("~/Content/bootstrap.css.map")
	@Styles.Render("~/Content/bootstrap.min.css")
	@Styles.Render("~/Content/bootstrap.min.css.map")
	@Styles.Render("~/Content/bootstrap-theme.css")
	@Styles.Render("~/Content/bootstrap-theme.css.map")
	@Styles.Render("~/Content/bootstrap-theme.min.css")
	@Styles.Render("~/Content/bootstrap-theme.min.css.map")
	@Styles.Render("~/Content/App.css")


</head>
<body>
	<nav class="navbar navbar-inverse">
  
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">EduSim</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="dropdown"><a class="dropdown-toggle" role="button" id="system-admin">System Admin</a></li>
		<li class="drowpdown"><a class="dropdown-toggle" role="button" id="account-admin">Account Admin</a></li>
		<li class="dropdown"><a class="dropdown-toggle" role="button" id="instructor">Instructor</a></li>
        <!--<li class="dropdown">
          <a id="system-admin-dropdown" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button">System Admin<span class="caret"></span></a>
          <ul class="dropdown-menu">
			<li>@Html.ActionLink("Accounts","Accounts","SystemAdmin")</li>
            <li>@Html.ActionLink("System Roles / Permissions","Roles","SystemAdmin")</li>
            <li>@Html.ActionLink("System Users","Users","SystemAdmin")</li>
            <li><a class="btn">System Permissions</a></li>
			
          </ul>
        </li>-->
						
        
      </ul>
      <ul class="nav navbar-nav navbar-right">
		<li><a class="navbar-brand">@CurrentUser.UserName</a></li>
        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
		<li><a href='@Url.Action("Logout","Account")'><span class="glyphicon glyphicon-log-out"></span>Log out</a></li>
        
      </ul>
    </div>

	<div class="collapse navbar-collapse nav option-bar" id="dashboard-option-bar">
		<ul class="nav navbar-nav navbar-right" id="option-bar-items">
			

		</ul>

	</div>
  
</nav>

	<div class="container body-content">
		
		@RenderBody()
	</div>

</body>
</html>

<script>
	$(document).ready(function(){
		$("#option-bar-list").hide();
		$("#system-admin").click(function(){
			$.ajax({
				url:'@Url.Action("SystemAdmin","Menu")',
				type:"POST",
				success:function(result){
					$("#option-bar-items").html(result);

				}
			});
		});

		$("#account-admin").click(function(){
			$.ajax({
				url:'@Url.Action("AccountAdmin","Menu")',
				type:"POST",
				success: function(result){
					$("#option-bar-items").html(result);

				}
			});
		});

		$("#instructor").click(function(){
			$.ajax({
				url:'@Url.Action("Instructor","Menu")',
				type:"POST",
				success: function(result) {
					$("#option-bar-items").html(result);

				}
			});
		});

	});

	function CloseOptionBar() {
		$("#option-bar-items").html("");
	}
</script>



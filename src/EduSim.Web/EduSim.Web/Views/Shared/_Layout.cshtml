<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
	<script type="text/javascript" src="~/Scripts/jquery-3.1.1.min.js"></script>
	<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
	<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
 	@Styles.Render("~/Content/bootstrap.css")
	@Styles.Render("~/Content/bootstrap.css.map")
	@Styles.Render("~/Content/bootstrap.min.css")
	@Styles.Render("~/Content/bootstrap.min.css.map")
	@Styles.Render("~/Content/bootstrap-theme.css")
	@Styles.Render("~/Content/bootstrap-theme.css.map")
	@Styles.Render("~/Content/bootstrap-theme.min.css")
	@Styles.Render("~/Content/bootstrap-theme.min.css.map")
	@Styles.Render("~/Content/App.css")

</head>
<body>
	<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">EduSim</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        
        <li class="dropdown">
          <a id="system-admin-dropdown" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button">System Admin<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("System Roles / Permissions","Roles","SystemAdmin")</li>
            <li>@Html.ActionLink("System Users","Users","SystemAdmin")</li>
            <li><a class="btn">System Permissions</a></li>
			<li><a class="btn">Accounts</a></li>
          </ul>
        </li>
						
        <li><a href="#">Account Admin</a></li>
        <li><a href="#">Instructor</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      </ul>
    </div>
  </div>
</nav>

	<div class="container body-content">
		@RenderBody()
	</div>

</body>
</html>

<script>
	$(document).ready(function(){
		$(".dropdown-toggle").dropdown();
	});
</script>



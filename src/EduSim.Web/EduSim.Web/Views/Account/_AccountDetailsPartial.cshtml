@model EduSim.Web.ViewModels.AccountDetailsViewModel

<div class="row">
	<h3 id="account-title">@Model.Account.AccountName</h3>
</div>
@using(Html.BeginForm("Save","Account", FormMethod.Post))
{
	
<div class="row">
	<h4>Details</h4>

	<div class="form-group">
		@Html.Label("Account Name: ")
		@Html.TextBoxFor(Model => Model.Account.AccountName)
	</div>

	<div class="form-group">
		@Html.Label("Account Type: ")
		@Html.DropDownListFor(Model => Model.Account.AccountTypeId, Model.AccountTypePicker,"Select an account type...")
	</div>
	<input type="submit" id="save-account-details-button" class="btn btn-success" value="Save"/>
	<button class="btn btn-danger">Cancel</button>
</div>

<div class="row">
	<h4>Schools</h4>
	<ul class="list-group col-md-12">
		<li class="list-group-item col-md-8"><a class="btn btn-primary">Add new school to this account  <span class="glyphicon glyphicon-plus"></span></a></li>
		@foreach(var school in Model.Account.Schools)
		{
			<li class="list-group-item col-md-8">@school.SchoolName  <button class="btn btn-success">School Details</button> <button class="btn btn-danger pull-right">Delete</button></li>
		}
	</ul>
</div>
}

<script>
	$(documnent).ready(function(){
		$("#save-account-details-button").click(function(){
			$("#account-detail-form").submit();
		});
	});

</script>